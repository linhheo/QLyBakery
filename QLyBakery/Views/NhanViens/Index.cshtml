            @Html.DisplayFor(modelItem => item.TenNhanvien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoDienThoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoTaiKhoan)
